# NOFX Environment Variables Template
# Copy this file to .env and modify the values as needed

# 数据库配置
# SQLite (本地开发)
# DATABASE_URL=

# Supabase PostgreSQL (生产环境)
# DATABASE_URL=postgresql://postgres:[password]@db.[project].supabase.co:5432/postgres

# 示例 Supabase 连接字符串
# DATABASE_URL=postgresql://postgres:your_password_here@db.abcdefghijk.supabase.co:5432/postgres

# Ports Configuration
# Backend API server port (internal: 8080, external: configurable)
NOFX_BACKEND_PORT=8080
API_PORT=8080

# Frontend web interface port (Nginx listens on port 80 internally)
NOFX_FRONTEND_PORT=3000

# JWT 密钥 (建议使用长随机字符串)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# 管理员模式 (true/false)
ADMIN_MODE=true

# Timezone Setting
# System timezone for container time synchronization
NOFX_TIMEZONE=Asia/Shanghai

# 其他配置
LOG_LEVEL=info
